class Solution:
    def trap(self, height):

        # TC : O(N)
        # SC : O(1)
        l, r = 0, len(height) - 1
        maxleft, maxright = height[l], height[r]
        capacity = 0

        while l < r:
            if height[l] <= height[r]:
                maxleft = max(maxleft, height[l])
                capacity += maxleft - height[l]
                l += 1
            else:
                maxright = max(maxright, height[r])
                capacity += maxright - height[r]
                r -= 1

        return capacity
